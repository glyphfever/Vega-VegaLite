{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "description": "Slope graph showing the change in yeild for barley sites",
    "data": {
        "url":"https://raw.githubusercontent.com/vega/vega-datasets/next/data/barley.json"
    },
    "width":{"step": 100},
    "height":500,
    "transform": [
        {
            "joinaggregate": [
                {
                    "field": "yield",
                    "op": "median",
                    "as": "median_yield"
                }            
            ],
            "groupby": ["site","year"]
        },
        {
            "calculate": "datum.median_yield", "as": "median_yield"
        }
    ],
    "mark":"line",
    "encoding": {
        "x":{
            "field":"year",
            "type": "nominal",
            "axis":{
                "grid": false,
                "position":1,
                "labelAngle":0
            }
        },
        "y":{
            
            "field":"median_yield",
            "type": "quantitative",
            "axis":{"title":"Median Yield"}
        },
 
        "color":{
            "field":"site",
            "type": "nominal"

        }
    }
 

}